<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >
    <!-- A CardView that contains a TextView -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/news_feed_text"
        android:id="@+id/newsFeedText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/users_online"
        android:id="@+id/usersOnlineText"
        android:layout_alignBottom="@+id/newsFeedText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#029dda"
        android:singleLine="false"
        android:paddingRight="10dp"
        android:paddingTop="10dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newsListView"
        android:layout_below="@+id/newsFeedText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="?attr/actionBarSize"/>
</RelativeLayout>